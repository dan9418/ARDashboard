<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/camera_layout"
    tools:context="com.catchoom.test.SplashScreen">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menu_button"
        android:src="@drawable/menu_image_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>

    <com.craftar.CraftARCameraView
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" >

    </com.craftar.CraftARCameraView>

    <ImageView
        android:id="@+id/single_box"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/empty_overlay_box"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/single_name"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="TC 100"
        android:textColor="#FFFFFF"
        android:layout_alignRight="@id/single_box"
        android:layout_alignLeft="@id/single_box"
        android:layout_alignTop="@id/single_box"
        android:layout_alignBottom="@id/single_box"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="75sp"
        />

    <TextView
        android:id="@+id/single_values"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Maintenance open"
        android:textColor="#FFFFFF"
        android:layout_alignRight="@id/single_box"
        android:layout_alignLeft="@id/single_box"
        android:layout_alignTop="@id/single_box"
        android:layout_alignBottom="@id/single_box"
        android:gravity="center_horizontal"
        android:layout_marginTop="140dp"
        android:textSize="50sp"
        />
</RelativeLayout>